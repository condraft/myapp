<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="nav justify-content-center border-bottom bg-light">
        <h1 class="grid-6"><a href="/">たんけんのきろく</a></h1>
        
        <% if user_signed_in? %>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              *<%= current_user.nickname %>*がきろくちゅう
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/users/<%= current_user.id %>">すてーたす</a>
              <a class="dropdown-item" href="/posts/new">ぼうけんにっしをかく</a>
              <div class="dropdown-item"><%= link_to "きょうはやめる", destroy_user_session_path, method: :delete %></div>
          </div>
        <% end %>
      </div>
    <%= yield %>
    </header>

    
  </body>
</html>
