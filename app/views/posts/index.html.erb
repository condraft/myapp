<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 postlist jscroll">
        <% @posts.each do |post| %>
          <%= render partial: "post", locals: { post: post } %>
        <% end %>
        <%= paginate(@posts) %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="main">
      <div class="btn1 btn2 btn3">
        <%= link_to "きろくをつづける", new_user_session_path, :class => 'post' %>
      </div>
      <div class="btn1 btn2 btn3">
        <%= link_to "あたらしいたんさくしゃ", new_user_registration_path, :class => 'post' %>
      </div>
    </div>
  </div>
<% end %>
