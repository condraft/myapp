<div class ="container showcont">
  <div class="row box17">
    <img class="col-md-7 showimg" src="<%= @post.image %>">
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/posts/#{@post.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/posts/#{@post.id}", method: :delete %>
          </li>
        </ul>
      <% end %>
      <%= simple_format(@post.text) %>
      <span class="name">
        <a href="/users/<%= @post.user.id %>">
          <span>投稿者</span><%= @post.user.nickname %>
        </a>
      </span>
    <div class="col-md-2"> 
    <!-- ここからフォーム -->
      <% if current_user %>
        <%= form_tag("/posts/#{@post.id}/comments",  method: :post,  id: "new_comment" ) do %>
          <textarea cols="30" name="text" placeholder="コメントする" rows="2" class="textbox"></textarea>
          <input type="submit" value="SENT">
        <% end %>
      <% end %>
      <div class="comments">   
        <h4>＜コメント一覧＞</h4>
        <% if @comments %>
          <% @comments.each do |comment| %>
            <p>
              <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
              <%= comment.text %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>